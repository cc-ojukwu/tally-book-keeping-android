<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.onboarding.OnboardingSecondFragment">



        <TextView
            android:id="@+id/text_view_onboard_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update_inventory_with_ease"
            android:layout_marginBottom="126dp"
            android:layout_marginHorizontal="16dp"
            android:textColor="@color/text_color2"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/image_onboard_3"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/image_onboard_3"
            android:layout_width="290dp"
            android:layout_height="460dp"
            android:src="@drawable/screenshot5"
            android:scaleType="centerInside"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>
</layout>